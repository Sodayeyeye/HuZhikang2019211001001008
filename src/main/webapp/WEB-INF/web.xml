<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>anyName</servlet-name>
        <servlet-class>com.HuZhiKang.week2.demo.HelloWorldServlet</servlet-class>
    </servlet>

    <servlet-mapping>
    <servlet-name>anyName</servlet-name>
    <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LifeCycleServlet</servlet-name>
        <servlet-class>com.HuZhiKang.week3.demo.LifeCycleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LifeCycleServlet</servlet-name>
        <url-pattern>/life</url-pattern>
        <!--/life ==LifeCycleServlet== com.dabing.week3.demo.LifeCycleServlet-->
    </servlet-mapping>


    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.HuZhiKang.week3.demo.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
        <!--/life ==LifeCycleServlet== com.dabing.week3.demo.LifeCycleServlet-->
    </servlet-mapping>


    <!-- x=5,a= x so we can say a=5-->
</web-app>